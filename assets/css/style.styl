body
  // background-color #aaaaaa
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0
  
  .header
    width 100%
    .nav-bar
      width 100%
      background-color #eee
      .nav-button
        display inline-block
        padding 5px
        background-color #999
  .game-body
    width 100%
    height 100%

    .dota-square
      padding 5px

  .footer
    position absolute
    bottom 0px
    color #ddd

.key-square
  display inline-block
  width 150px
  height 150px
  padding 5px
  .spell-block
    .spell-image
      background-color #0f0
      width 128px
      height 128px
      margin-right auto
      margin-left auto
    .spell-key
      text-align center
      color #f00
  
